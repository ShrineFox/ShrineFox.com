@inject IJSRuntime JS

@code
{
    [Parameter]
    public string Icon { get; set; } = "";

    [Parameter]
    public string IconType { get; set; } = "fa-solid";

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

}

<div class="container">
    <div class="card">
        <div class="card-body">
            <table>
                <tbody>
                    <tr>
                        <td style="font-size: 25pt;padding-right: 20px;">
                            @if (!Icon.Contains("."))
                            {
                                <i class="@IconType @Icon"></i>
                            }
                            else
                            {
                                <img class="img-responsive" src="@Icon"/>
                            }
                        </td>
                        <td>
                            @if (ChildContent is not null)
                            {
                                @ChildContent
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
